# Allow access to uploaded files
Options -Indexes
Allow from all

# Security headers for uploaded files
<Files "*.php">
    Deny from all
</Files>

<Files "*.phtml">
    Deny from all
</Files>

<Files "*.php3">
    Deny from all
</Files>

<Files "*.php4">
    Deny from all
</Files>

<Files "*.php5">
    Deny from all
</Files>

<Files "*.pl">
    Deny from all
</Files>

<Files "*.py">
    Deny from all
</Files>

<Files "*.jsp">
    Deny from all
</Files>

<Files "*.asp">
    Deny from all
</Files>

<Files "*.sh">
    Deny from all
</Files>

<Files "*.cgi">
    Deny from all
</Files>

# Allow only image files
<FilesMatch "\.(jpg|jpeg|png|gif)$">
    Allow from all
</FilesMatch>
